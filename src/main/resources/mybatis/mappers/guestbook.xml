<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="guestbook">



	<select id="getList" resultType="com.javaex.vo.GuestbookVo">
		
		<![CDATA[
			select no,
     			   name,
    			   password pw,
    			   content,
     			   to_char(reg_date, 'yyyy-mm-dd hh:mi:ss') regDate
			from guestbook
			order by reg_date desc
		]]>

	</select>


	<!-- 방명록 글1개 가져오기 -->
	<select id="selectByNo" parameterType="int" resultType="com.javaex.vo.GuestbookVo">
      <![CDATA[
         select no, name, password pw, content, reg_date regDate
         from guestbook
         where no = #{no}
      ]]>
	</select>


	<!-- 방명록 글 저장 -->
	<select id="write" parameterType="com.javaex.vo.GuestbookVo">
		
		<![CDATA[
			insert into guestbook
			values(seq_guestbook_no.nextval, 
					#{name}, 
					#{pw}, 
					#{content}, 
					sysdate)
		]]>

	</select>


	<!-- 방명록 글 저장 selectKey -->	<!-- nextval로 번호 받은걸 vo에 넣으라는 뜻.... -->
	<insert id="insertSelectKey" parameterType="com.javaex.vo.GuestbookVo">
		<selectKey keyProperty="no" resultType="int" order="BEFORE">  <!--before: 여러 쿼리문 중 이거를 가장 먼저 하기 -->
						<!--이 no는 vo에 있는 필드값이어야 함.  -->
			select seq_guestbook_no.nextval from dual	<!-- dual: 가상의 테이블 -->
		</selectKey>
		
		<!-- 위에서 vo에 번호가 들어갔으니 여기서는 nextval해줄 필요 없이 그냥 no로 받으면 됨. -->
		<![CDATA[
			insert into guestbook
         	values(#{no}, 	
         		   #{name},
         		   #{pw},
         		   #{content},
         		   sysdate)
		]]>
	</insert>


	<select id="delete">
		
		<![CDATA[
			delete from guestbook
			where no = #{no}
			and password = #{pw}
		]]>

	</select>




</mapper>